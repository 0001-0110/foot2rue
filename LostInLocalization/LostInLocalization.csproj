<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
	  <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="LocalizationFiles\de-DE.xml" />
    <None Remove="LocalizationFiles\en-UK.xml" />
    <None Remove="LocalizationFiles\en-US.xml" />
    <None Remove="LocalizationFiles\fr-FR.xml" />
    <None Remove="LocalizationFiles\hr-HR.xml" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="LocalizationFiles\de-DE.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
    <AdditionalFiles Include="LocalizationFiles\en-UK.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
    <AdditionalFiles Include="LocalizationFiles\en-US.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
    <AdditionalFiles Include="LocalizationFiles\fr-FR.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
    <AdditionalFiles Include="LocalizationFiles\hr-HR.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
  </ItemGroup>

</Project>
